{% extends 'layout.njk' %}

{% block content %}

<aside>
  {% include 'carbonads.html' %}

  <div class="no-mobile">
    <br/>

    {% include 'tweet-this.html' %}

    {% include "buy-me-a-coffee.html" %}

    {% if tags.length > 0 %}
      <div class="no-mobile">
        <br>
        Browse tags
        <br>
        <ol class="unstyled-list">
        {%- for tag in tags | tags -%}
          <li>
            <a class="tag subtle" href="/tags/{{ tag }}"><span>#{{ tag }}</span></a>&nbsp;
          </li>
        {%- endfor -%}
        </ol>
      </div>
    {% endif %}
  </div>
</aside>

<article itemscope itemtype="http://schema.org/BlogPosting">
  <h1 class="title no-anchorify"><span>{{ title }}</span></h1>

  <hr>

  <p class="no-mobile">
    <a target="_blank" rel="noreferrer" href="https://github.com/christian-fei/christian-fei.github.io/edit/master/{{ page.relativeSource }}">Found a typo? Edit this page on GitHub</a>
  </p>

  <p>
    <b>{{ page.data.date | isoday }}</b>
  </p>

  <p>
    {{ content | words }} words - {{ content | readingTime }} ðŸ•œ
  </p>

  <hr>

  <div class="main-content">{{ content | safe }}</div>


  <h2>FEEDBACK <a href="https://twitter.com/christian_fei">@christian_fei</a></h2>

  {% include 'tweet-this-big.html' %}

  {% if js %}
    <script src="{{ js }}"></script>
  {% endif %}
</article>

{% endblock %}