---
layout: layout.njk
---

<article itemscope itemtype="http://schema.org/BlogPosting">
  <h1 class="title no-anchorify">{{ title }}</h1>
  <div>
    {% if page.url != '/' and page.url != '/about/' %}
        <div style="float: right">
          {% include 'carbonads.html' %}
        </div>
    {% endif %}

    <p class="no-share info">
      written on {{ page.date.toISOString().substring(0, 10) }} by <a target="_blank" href="https://twitter.com/christian_fei">Christian Fei</a>
    </p>

    <p class="no-share tags">
      {%- for tag in tags -%}
        <a class="tag subtle" href="/tags/{{ tag }}"><span>#{{ tag }}</span></a>&nbsp;
      {%- endfor -%}
    </p>

    {% include 'tweet-this.html' %}
  </div>

  <div class="main-content">{{ content | safe }}</div>


  {% include 'tweet-this.html' %}
</article>
