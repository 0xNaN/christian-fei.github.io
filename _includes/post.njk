---
layout: layout.njk
---

<article itemscope itemtype="http://schema.org/BlogPosting">
  <h1 class="title no-anchorify"><span>{{ title }}</span></h1>
  <div class="pad-v">
    {% if page.url != '/' and page.url != '/about/' %}
        <div style="float: right">
          {% include 'carbonads.html' %}
        </div>
    {% endif %}

    <p class="info1">
      by <a target="_blank" href="https://twitter.com/christian_fei">Christian Fei</a>
      @ <b>{{ page.date.toISOString().substring(0, 10) }}</b>
    </p>

    <p class="main-content">{{ content | words }} words, {{ content | readingTime }} reading time</p>

    <p class="no-share tags">
      {%- for tag in tags -%}
        <a class="tag subtle" href="/tags/{{ tag }}"><span>#{{ tag }}</span></a>&nbsp;
      {%- endfor -%}
    </p>

    {% include 'tweet-this.html' %}
  </div>

  <div class="main-content">{{ content | safe }}</div>


  <h2>FEEDBACK <a href="https://twitter.com/christian_fei">@christian_fei</a></h2>

  {% include 'tweet-this.html' %}

  {% if js %}
    <script src="{{ js }}"></script>
  {% endif %}
</article>
