{% extends 'layout.njk' %}

{% block content %}

<article itemscope itemtype="http://schema.org/BlogPosting">
  <header>
    <h1 itemprop="name headline" class="title no-anchor">{{ title }}</h1>

    <p class="light">
      <time datetime="{{ page.data.date | isoday }}" itemprop="datePublished">
        {{ page.data.date | isoday }}
      </time>
      {% if page.data.updated %}
        &nbsp;&middot;&nbsp;(<i>last updated {{ page.data.updated | isoday }}</i>)
      {% endif %}
      &nbsp;&middot;&nbsp;
      {{ content | words }} words &middot; {{ content | readingTime }}
      &nbsp;&middot;&nbsp;
      by <a href="/about/" itemprop="author">cri</a>
    </p>

    <div class="dash-figure"></div>

    {# {% if page.data.image %}
    <img itemprop="image" src="{{ page.data.image }}"/>
    {% endif %} #}

    {% if page.data.thanks %}
    <p class="tac">
      Thanks to&nbsp;
      {% for person in page.data.thanks %}
        {% if loop.last %}and{% endif %}</a>
        {% if person.link %}
          <a href="{{person.link}}">{{person.name}}</a>
        {% else %}
          {{person.name}}
        {% endif %}
        {% if not loop.last and loop.index !== page.data.thanks.length - 1 %},{% endif %}
      {% endfor %}
      &nbsp;for the feedback on this post
    </p>
    {% endif %}
  </header>


  <div class="main-content" itemprop="articleBody">{{ content | safe }}</div>

  <p class="tac ">
    {% include 'snippets/tweet-this.html' %}
  </p>

  <div class="tac space ">
    Let me know what you think <a href="https://twitter.com/christian_fei">on Twitter @christian_fei</a>
    <br>
    or email me: hey [at] cri.dev
    <br>
    {% include 'stay-in-touch.html' %}
  </div>
</article>

<section class="pad">
  <h1>Continue reading..</h1>
  <div class="">
    {% for post in collections.featured | reverse | limit5 %}
    <a href="{{ post.url }}" style="margin: 0.5em" class="tdn  track-continue-reading-link">
      <b class="post-title">{{ post.data.title }}</b>
    </a>
    <br>
    {% endfor %}
    <a href="/archive/" style="margin: 0.5em" class="tdn track-continue-reading-link">
      <b class="post-title">Read all {{collections.post.length}} posts</b>
    </a>
  </div>
</section>

<section class="pad">
  <div>
    <a href="https://gumroad.com/l/yUhsLz" class="pad tac track-post-end-gumroad-techniques-seo">
      ðŸš€&nbsp;Get a copy of "Techniques to improve SEO"
      <br>
      <br>
      <img style="max-width: 300px;" lazy="/assets/images/techniques-seo/techniques-seo-cover-share.png" alt="Get a copy of Techniques to improve SEO"/>
    </a>
  </div>

  <div class="">
    {% include 'stay-in-touch.html' %}
  </div>
</section>

{% endblock %}
