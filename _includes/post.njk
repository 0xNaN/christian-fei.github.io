---
layout: layout.njk
---

<article itemscope itemtype="http://schema.org/BlogPosting">
  <h1 class="title no-anchorify">{{ title }}</h1>
  <p class="no-share info">
    written on {{ page.date.toISOString().substring(0, 10) }}
  </p>
  <p class="no-share info">
    by <a target="_blank" href="https://twitter.com/christian_fei">Christian Fei</a>
  </p>
  <p class="no-share tags">
    {%- for tag in tags -%}
      <a class="tag" href="/tags/{{ tag }}"><span>#{{ tag }}</span></a>&nbsp;
    {%- endfor -%}
  </p>
  <p class="no-share">
    <a target="_blank" href="https://twitter.com/share?url=https://christianfei.com{{page.url}}&text={{page.fileSlug | encode}} by @christian_fei&ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a> this<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  </p>
  {{ content | safe }}
  <p>
    <a target="_blank" href="https://twitter.com/share?url=https://christianfei.com{{page.url}}&text={{page.fileSlug | encode}} by @christian_fei&ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a> this<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  </p>
</article>
