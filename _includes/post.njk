{% extends 'layout.njk' %}

{% block content %}

<article itemscope itemtype="http://schema.org/BlogPosting">
  <h1 itemprop="name headline" class="title {% if page.data.image %} has-image {% endif %}"  {% if page.data.image %} itemprop="image" style="background-image: url('{{ page.data.image }}')"{% endif %}><span>{{ title }}</span></h1>

  <header>
    <div class="flex">
      <div class="pad">
        <p>
          Written on &nbsp; <b>
          <time datetime="{{ page.data.date | isoday }}" itemprop="datePublished">{{ page.data.date | isoday }}</time></b> {% if page.data.updated %}<br>(<i>last updated {{ page.data.updated | isoday }}</i>) {% endif %} by <span itemprop="author">cri</span>
        </p>

        {% if page.data.hackernews %}
          <a href="{{ page.data.hackernews }}">on HackerNews</a>
        {% endif %}

        <p>
          {{ content | words }} words - {{ content | readingTime }} ðŸ•œ
        </p>
      </div>
      <div class="pad tal">
        <p>
          <a href="/about">
            <img class="avatar-image tac" alt="me with sunglasses" style="max-width: 64px; border-radius: 50%;vertical-align: super;" lazy="/assets/images/cf4.64x64.webp"/>
            <a class="cta" style="vertical-align: top;" href="https://twitter.com/christian_fei">@christian_fei</a>
          </a>
        </p>
      </div>
    </div>
    <div class="flex">
      <div class=""><a href="/learn-testing-nodejs-javascript/" class="track-post-learn-testing-nodejs-javascript">âœ…&nbsp;Learn Testing with Node.js & JavaScript</a></div>
      <div class=""><a href="https://gumroad.com/l/yUhsLz" class="track-post-gumroad-techniques-seo">ðŸš€&nbsp;Get a copy of "Techniques to improve SEO"</a></div>
    </div>
    {% if page.data.thanks %}
    <div>
      <p>
        Thanks to&nbsp;
        {% for person in page.data.thanks %}
          {% if loop.last %}and{% endif %}</a>
          {% if person.link %}
            <a href="{{person.link}}">{{person.name}}</a>
          {% else %}
            {{person.name}}
          {% endif %}
          {% if not loop.last and loop.index !== page.data.thanks.length - 1 %},{% endif %}
        {% endfor %}
        &nbsp;for the feedback on this post
      </p>
    </div>
    {% endif %}
  </header>

  <div class="main-content" itemprop="articleBody">{{ content | safe }}</div>

  <div class="tac mt3">
    {% include 'snippets/tweet-this.html' %}
  </div>

  <div class="pad mt3">
    <div class="flex">
      <a href="/learn-testing-nodejs-javascript/" class="pad tac track-post-end-learn-testing-nodejs-javascript">
        âœ…&nbsp;Learn Testing with Node.js
        <br>
        <br>
        <img style="max-width: 300px;" lazy="/assets/images/learn-testing/learn-testing-cover-share.png" alt="Learn Testing with Node.js"/>
      </a>
      <a href="https://gumroad.com/l/yUhsLz" class="pad tac track-post-end-gumroad-techniques-seo">
        ðŸš€&nbsp;Get a copy of "Techniques to improve SEO"
        <br>
        <br>
        <img style="max-width: 300px;" lazy="/assets/images/techniques-seo/techniques-seo-cover-share.png" alt="Get a copy of Techniques to improve SEO"/>
      </a>
    </div>
  </div>

  <div class="mt3">
    {% include 'subscribe-to-newsletter.html' %}
  </div>
</article>

<aside id="side-content">
  {% set tag %}{{ page.data.tags | mainTag }}{% endset %}
  {% if tag in ['nodejs','mongodb'] %}
  <div class="related mt3">
    Browse <a class="track-post-side-related" href="/tags/{{ tag }}">{{ tag }}</a>
  </div>
  {% endif %}

  <div class="pad mt3">
    {% include 'snippets/tweet-this.html' %}
  </div>
</aside>

{% endblock %}
