{% extends 'layout.njk' %}

{% block content %}

<aside class="no-mobile tac">
  <div class="pure-g">
    <div class="no-mobile tac pure-u" style="min-width: 200px">
      {% include 'snippets/carbonads.html' %}
    </div>
    <br/>

    <div class="no-mobile tac pure-u" style="min-width: 200px">
      <p>
        {% include 'snippets/tweet-this.html' %}
      </p>
    </div>
    <div class="no-mobile tac pure-u" style="min-width: 200px">
      <a href="/about">
        <img class="avatar-image tac" alt="me with sunglasses" style="max-width: 64px; border-radius: 50%;" lazy="/assets/images/cf4.64x64.png"/>
      </a>
      <p>
        <a class="bg cta" href="https://twitter.com/christian_fei">@christian_fei</a>
      </p>
      <a class="dib cta" target="_blank" href="https://buttondown.email/christianfei">
        <i class="icon icon-envelop"></i>&nbsp;Subscribe!
      </a>
    </div>
  </div>
</aside>

<article itemscope itemtype="http://schema.org/BlogPosting">
  <h1 itemprop="name headline" class="title {% if page.data.image %} has-image {% endif %}"  {% if page.data.image %} style="background-image: url('{{ page.data.image }}')"{% endif %}><span>{{ title }}</span></h1>

  <header>
    <div class="pure-g">
      <div class="pure-u">
        <div class="l-box">
          <p class="no-mobile">
            <a target="_blank" rel="noreferrer" href="https://github.com/christian-fei/christian-fei.github.io/edit/master/{{ page.relativeSource }}"><i class="icon icon-pencil"></i>&nbsp;Found a typo? Edit this page on GitHub</a>
          </p>

          <p>
            Written on &nbsp; <b>
            <time datetime="{{ page.data.date | isoday }}" itemprop="datePublished">{{ page.data.date | isoday }}</time></b> {% if page.data.updated %}<br>(<i>last updated {{ page.data.updated | isoday }}</i>) {% endif %}
          </p>

          {% if page.data.hackernews %}
            <a href="{{ page.data.hackernews }}">on HackerNews</a>
          {% endif %}

          <p>
            {{ content | words }} words - {{ content | readingTime }} ðŸ•œ
          </p>

          <p class="only-mobile">
            {% include 'snippets/tweet-this.html' %}
          </p>
        </div>
      </div>
      <div class="pure-u">
        <div class="l-box">
          <p>
            Get the latest on Programming, Clean code, TDD, Refactoring and more
            <br/>
            <a class="dib cta" target="_blank" href="https://buttondown.email/christianfei">
              <i class="icon icon-envelop"></i>&nbsp;Subscribe to my newsletter!
            </a>
          </p>
        </div>
      </div>
    </div>
    {% if page.data.thanks %}
    <p>
      Thanks to&nbsp;
      {% for person in page.data.thanks %}
        {% if loop.last %}and{% endif %}</a>
        {% if person.link %}
          <a href="{{person.link}}">{{person.name}}</a>
        {% else %}
          {{person.name}}
        {% endif %}
        {% if not loop.last and loop.index !== page.data.thanks.length - 1 %},{% endif %}
      {% endfor %}
      &nbsp;for the feedback on this post
    </p>
    {% endif %}
  </header>


  <div class="main-content" itemprop="articleBody">{{ content | safe }}</div>


  {% include 'snippets/tweet-this-big.html' %}

  <h2>FEEDBACK <a href="https://twitter.com/christian_fei">@christian_fei</a></h2>

  {% include 'subscribe-to-newsletter.html' %}
</article>

{% endblock %}
